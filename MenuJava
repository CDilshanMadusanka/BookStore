    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         

        int verify = JOptionPane.showConfirmDialog(null, "Do you Exit?", "Exit", JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE);
        if (verify == JOptionPane.YES_OPTION) {
        System.exit(0);
        }
    }                                        

    private void formWindowActivated(java.awt.event.WindowEvent evt) {                                     

    }                                    

    private void txtTitleActionPerformed(java.awt.event.ActionEvent evt) {                                         

        Text.setText("Add New Book");
        if(txtTitle.getText().equals("")){
        v1.setVisible(true);
        txtTitle.setBackground(Color.red);
        txtTitle.setForeground(Color.white);
        txtTitle.requestFocus();
        }
        else{
            txtTitle.setBackground(Color.white);
            txtTitle.setForeground(Color.black);
            txtName.requestFocus();
            v1.setVisible(false);
        }
    }                                        

    private void txtNameActionPerformed(java.awt.event.ActionEvent evt) {                                        

        txtSurname.requestFocus();
    }                                       

    private void txtSurnameActionPerformed(java.awt.event.ActionEvent evt) {                                           

        txtISBN.requestFocus();
    }                                          

    private void txtISBNActionPerformed(java.awt.event.ActionEvent evt) {                                        

        if(txtISBN.getText().equals("")){
        v2.setVisible(true);
        txtISBN.setBackground(Color.red);
        txtISBN.setForeground(Color.white);
        txtISBN.requestFocus();
        }
        else{
            txtISBN.setBackground(Color.white);
            txtISBN.setForeground(Color.black);
            txtISBN.requestFocus();
            v2.setVisible(false);
            btInsert.requestFocus();
            
        }
    }                                       

    private void txtTitleKeyPressed(java.awt.event.KeyEvent evt) {                                    


    }                                   

    private void btInsertActionPerformed(java.awt.event.ActionEvent evt) {                                         

        try{
            if(txtTitle.getText().equals("")){
                JOptionPane.showMessageDialog(this, "Enter Book Title.", "Required", JOptionPane.INFORMATION_MESSAGE);
                txtTitle.requestFocus();
            }
            else{
        dtm = (DefaultTableModel) Table.getModel();
        
        Book book = new Book(txtTitle.getText(), txtName.getText(), txtSurname.getText(), Integer.valueOf(txtISBN.getText()));
        b.insert(book);
        
        Object obj[] = {txtTitle.getText(), txtName.getText(), txtSurname.getText(),txtISBN.getText()};
        dtm.addRow(obj);
        
        clear();
        txtTitle.requestFocus();
            }
        }catch(java.lang.NumberFormatException ex ){
        JOptionPane.showMessageDialog(this, "ISBN must be Numeric", "Invalid ISBN", JOptionPane.ERROR_MESSAGE);
        txtISBN.setText(null);
        txtISBN.requestFocus();
        }
        
    }                                        

    private void txtByTitleActionPerformed(java.awt.event.ActionEvent evt) {                                           

        btSearch1.requestFocus();
    }                                          

    private void txtSearchByTitle2ActionPerformed(java.awt.event.ActionEvent evt) {                                                  

        btDelete.requestFocus();
    }                                                 

    private void btDeleteActionPerformed(java.awt.event.ActionEvent evt) {                                         

        try{
            
            int row = Table.getSelectedRow();
        dtm = (DefaultTableModel) Table.getModel();
        
        dtm.removeRow(row);
        
        boolean result = b.remove(txtSearchByTitle2.getText()); // search by title
        
        if(result==true){
        JOptionPane.showMessageDialog(this, "Successfully Deleted.", "Removed", JOptionPane.INFORMATION_MESSAGE);
        }
        else{
        JOptionPane.showMessageDialog(this, "Not Found to Delete.", "Not Removed", JOptionPane.ERROR_MESSAGE);
        }
            
        } catch(java.lang.NullPointerException ex){
            JOptionPane.showMessageDialog(this, "Delete could not Done!", "Invalid", JOptionPane.ERROR_MESSAGE);
            txtSearchByTitle2.requestFocus();
        } catch(java.lang.ArrayIndexOutOfBoundsException ex){
            JOptionPane.showMessageDialog(this, "Delete could not Done!", "Invalid", JOptionPane.ERROR_MESSAGE);
            txtSearchByTitle2.requestFocus();
        }
        
    }                                        

    private void btSearch1ActionPerformed(java.awt.event.ActionEvent evt) {                                          

        try{
        Text.setText("Search by Title - Result");
        Node search = b.search(txtByTitle.getText()); // search by title
        
        JOptionPane.showMessageDialog(this, "Book Title : "+search.book.title.toString()+"\n"
                + "Book Author : "+search.book.author_fname.toString()+"\n"
                + "Author Surname : "+search.book.author_sname.toString()+"\n"
                + "ISBN : "+String.valueOf(search.book.isbn)+"", "Found", JOptionPane.INFORMATION_MESSAGE);
        
        } catch(java.lang.NullPointerException ex){
        JOptionPane.showMessageDialog(this, "Book Title Not Found!", "Not Found", JOptionPane.ERROR_MESSAGE);
        txtByTitle.requestFocus();
        }
        
    }                                         

    private void txtByISBNActionPerformed(java.awt.event.ActionEvent evt) {                                          

        btSearch2.requestFocus();
    }                                         

    private void btSearch2ActionPerformed(java.awt.event.ActionEvent evt) {                                          

        try{
        Text.setText("Search by ISBN - Result");
        Node search = b.search(Integer.valueOf(txtByISBN.getText())); // search by title
        
        JOptionPane.showMessageDialog(this, "Book Title : "+search.book.title.toString()+"\n"
                + "Book Author : "+search.book.author_fname.toString()+"\n"
                + "Author Surname : "+search.book.author_sname.toString()+"\n"
                + "ISBN : "+String.valueOf(search.book.isbn)+"", "Found", JOptionPane.INFORMATION_MESSAGE);
        
        } catch(java.lang.NullPointerException ex){
        JOptionPane.showMessageDialog(this, "Book ISBN NOT Found!", "Not Found", JOptionPane.ERROR_MESSAGE);
        txtByISBN.requestFocus();
        } catch(java.lang.NumberFormatException ex){
        JOptionPane.showMessageDialog(this, "Book ISBN must be Numeric!.", "Invalid", JOptionPane.ERROR_MESSAGE);
        txtByISBN.setText(null);
        txtByISBN.requestFocus();
        }
    }                                         

    private void txtByISBN2ActionPerformed(java.awt.event.ActionEvent evt) {                                           

        btDelete2.requestFocus();
    }                                          

    private void btDelete2ActionPerformed(java.awt.event.ActionEvent evt) {                                          

        try{
        int row = Table.getSelectedRow();
        dtm = (DefaultTableModel) Table.getModel();
        
        dtm.removeRow(row);
        
        boolean result = b.remove(Integer.valueOf(txtByISBN2.getText())); // search by title
        
        if(result==true){
        JOptionPane.showMessageDialog(this, "Successfully Deleted.", "Removed", JOptionPane.INFORMATION_MESSAGE);
        }
        else{
        JOptionPane.showMessageDialog(this, "Not Found to Delete.", "Not Removed", JOptionPane.ERROR_MESSAGE);
        }
        } catch(java.lang.NullPointerException ex){
            JOptionPane.showMessageDialog(this, "Delete could not Done!", "Invalid", JOptionPane.ERROR_MESSAGE);
            txtByISBN2.requestFocus();
        } catch(java.lang.ArrayIndexOutOfBoundsException ex){
            JOptionPane.showMessageDialog(this, "Delete could not Done!", "Invalid", JOptionPane.ERROR_MESSAGE);
            txtByISBN2.requestFocus();
        }
        
    }                                         

    private void TableMouseClicked(java.awt.event.MouseEvent evt) {                                   

        int row = Table.getSelectedRow();
        txtByTitle.setText(Table.getValueAt(row, 0).toString());
        txtByISBN.setText(Table.getValueAt(row, 3).toString());
        txtSearchByTitle2.setText(Table.getValueAt(row, 0).toString());
        txtByISBN2.setText(Table.getValueAt(row, 3).toString());
        
    }                                  

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         

        Load m = new Load();
        m.setLocationRelativeTo(null);
        m.setVisible(true);
        this.dispose();
    }                                        

    private void btSearch3ActionPerformed(java.awt.event.ActionEvent evt) {                                          

        Tree t = new Tree(b);
        t.setLocationRelativeTo(null);
        t.setVisible(true);
        
    }                                         

    private void formWindowOpened(java.awt.event.WindowEvent evt) {                                  

        txtTitle.requestFocus();
        
    }                                 

    private void btSearch4ActionPerformed(java.awt.event.ActionEvent evt) {                                          

        try{
        Text.setText("Search by Title - Result");

        Results results = new Results();
        dtm = (DefaultTableModel) results.Table.getModel();
        
         List list = b.getBookList(txtByTitle.getText()); // search by title
            for(int i = 0;i< list.size(); i++)
            {
                Book bk = (Book)list.get(i);
                Object obj[] = {bk.title.toString(), bk.author_fname.toString(), bk.author_sname.toString(), Integer.valueOf(bk.isbn)};
                dtm.addRow(obj);
            }
            
            results.setLocationRelativeTo(null);
            results.setVisible(true);
        
        } catch(java.lang.NullPointerException ex){
        JOptionPane.showMessageDialog(this, "Book Title Not Found!", "Not Found", JOptionPane.ERROR_MESSAGE);
        txtByTitle.requestFocus();
        }
    }                                         

